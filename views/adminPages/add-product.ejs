<section class="admin-add-product">
  <h2>Add Product</h2>
  <p style="color: red"> <%= notice %> </p>
  <form id="category-form">
    <label>
      <input type="radio" name="category" value="perfume"
        onclick="toggleForm('perfume')"> Perfume </label>
    <label>
      <input type="radio" name="category" value="bags"
        onclick="toggleForm('bags')"> Bags </label>
  </form>

  <form id="perfume-form" class="product-form" style="display: none;"
    method="post" action="/admin" autocomplete="on">
    <input type="hidden" name="category" value="perfume">

    <h3>Add Perfume</h3>
    <label for="perfume-name">Name:</label>
    <input type="text" id="perfume-name" name="productName">

    <label for="perfume-description">Description:</label>
    <textarea id="perfume-description" name="description"
      autocomplete="off"></textarea>

    <label for="perfume-price">Price:</label>
    <input type="number" id="perfume-price" name="price" step="0.01">

    <label for="perfume-imageURL">Image URL:</label>
    <input type="text" id="perfume-imageURL" name="imageURL">

    <button type="submit">Add Perfume</button>
  </form>

  <form id="bags-form" class="product-form" style="display: none;" method="post"
    action="/admin" autocomplete="on">
    <input type="hidden" name="category" value="bags">

    <h3>Add Bags</h3>
    <label for="bags-name">Name:</label>
    <input type="text" id="bags-name" name="productName">

    <label for="bags-description">Description:</label>
    <textarea id="bags-description" name="description"></textarea>

    <label for="bags-price">Price:</label>
    <input type="number" id="bags-price" name="price" step="0.01">

    <label for="bags-imageURL">Image URL:</label>
    <input type="text" id="bags-imageURL" name="imageURL">

    <button type="submit">Add Bag</button>
  </form>
</section>