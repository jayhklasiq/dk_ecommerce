 <h2>Shopping Cart</h2>
<div class="cart-container">
  <div class="cart-item">
    <img src="images/bag4.png" alt="Bag Image">
    <div class="item-details">
      <h3>Product Name</h3>
      <p>Size: Large</p> <!-- Added size metadata -->
      <p>Price: $50</p>
      <p>Quantity: 1</p>
      <button class="edit-btn">Edit</button> <!-- Added Edit button -->
      <button class="remove-btn">Remove</button>
    </div>
  </div>
  <div class="cart-item">
    <img src="images/bottle1.png" alt="Perfume Image">
    <div class="item-details">
      <h3>Product Name</h3>
      <p>Size: 100ml</p> <!-- Added size metadata -->
      <p>Price: $30</p>
      <p>Quantity: 2</p>
      <button class="edit-btn">Edit</button> <!-- Added Edit button -->
      <button class="remove-btn">Remove</button>
    </div>
  </div>
  <div class="cart-summary">
    <h3>Total Amount: $110</h3>
    <div class="shipping-options">
      <h3>Shipping Options:</h3>
      <p>Standard Shipping: $5</p> <!-- Added shipping options -->
      <p>Express Shipping: $10</p>
      <!-- Other shipping options can be added here -->
    </div>
    <div class="promo-section">
      <h3>Apply Promo Code:</h3>
      <input type="text" id="promo-code" placeholder="Enter code">
      <button class="apply-promo-btn">Apply</button>
      <p id="promo-status"></p>
      <!-- Added status of whether discount was accepted or declined -->
    </div>
    <a href="#checkout" class="checkout-btn">Proceed to Checkout</a>
  </div>
</div>

<div id="checkout">
  <h2>Payment</h2>
  <div class="checkout-container">
    <form action="/submit-payment" method="POST">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required>
      </div>
      <div class="form-group">
        <label for="card">Credit Card:</label>
        <input type="text" id="card" name="card" required>
      </div>
      <div class="form-group">
        <label for="expiry">Expiry Date:</label>
        <input type="text" id="expiry" name="expiry" placeholder="MM/YY"
          required>
      </div>
      <div class="form-group">
        <label for="cvv">CVV:</label>
        <input type="text" id="cvv" name="cvv" required>
      </div>
      <div class="form-group">
        <button type="submit" class="submit-btn">Submit Payment</button>
      </div>
    </form>
  </div>
</div>