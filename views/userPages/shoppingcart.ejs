 <h2>Shopping Cart</h2>
<div class="cart-container">
  <% cartItems.forEach(item => { %>
  <div class="cart-item">
    <img src="<%= item.imageURL %>" alt="<%= item.name %> Image">
    <div class="item-details">
      <h3><%= item.name %></h3>
      <p>Price: $<%= item.price %></p>
      <button class="remove-btn"
        onclick="removeFromCart('<%= item._id %>')">Remove</button>
    </div>
  </div>
  <% }); %>

  <div class="cart-summary">
    <div class="shipping-options">
      <h3>Shipping Options:</h3>
      <% shippingOptions.forEach((option, index) => { %>
      <label>
        <input type="radio" name="shipping" class="shipping-option"
          data-price="<%= option.price %>" <%=index === 0 ? 'checked' : '' %>>
        <%= option.name %>: $<%= option.price %>
      </label>
      <% }); %>
    </div>

    <div class="promo-section">
      <h3>Apply Promo Code:</h3>
      <input type="text" id="promo-code" placeholder="Enter code">
      <button class="apply-promo-btn">Apply</button>
      <p id="promo-status"></p>
    </div>

    <h3>Total Amount: $<span id="total-amount"><%= totalAmount %></span></h3>

    <a href="#checkout" class="checkout-btn">Proceed to Checkout</a>
  </div>
</div>

<div id="checkout">
  <h2>Payment</h2>
  <div class="checkout-container">
    <form action="/submit-payment" method="POST">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required>
      </div>
      <div class="form-group">
        <label for="card">Credit Card:</label>
        <input type="text" id="card" name="card" required>
      </div>
      <div class="form-group">
        <label for="expiry">Expiry Date:</label>
        <input type="text" id="expiry" name="expiry" placeholder="MM/YY"
          required>
      </div>
      <div class="form-group">
        <label for="cvv">CVV:</label>
        <input type="text" id="cvv" name="cvv" required>
      </div>
      <div class="form-group">
        <button type="submit" class="submit-btn">Submit Payment</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/cart.js"></script>