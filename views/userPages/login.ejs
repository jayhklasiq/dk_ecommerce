 <section id="register-form-section" style="display:none;">
  <h2>Register</h2>

  <%= notice %>
  <form id="register-form" method="post" action="/register">

    <input type="text" name="name" placeholder="Name" required>

    <input type="email" name="email" placeholder="Email" required>

    <input type="password" name="password" placeholder="Password" required
      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W]).{8,}"
      title="Password must contain at least one number, one uppercase, one lowercase letter, one special character, and at least 8 or more characters">

    <a href="#" class="button-link"
      onclick="document.getElementById('register-form').submit();">Register</a>

    <p>Already have an account? <a href="#" onclick="toggleForms()">I have
        an account</a>
    </p>
  </form>
</section>

<section id="login-form-section">
  <h2>Login</h2>

  <%= notice %>
  <form id="login-form" method="post" action="/login">

    <input type="email" name="email" placeholder="Email" required>

    <input type="password" name="password" placeholder="Password" required
      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W]).{8,}"
      title="Password must contain at least one number, one uppercase, one lowercase letter, one special character, and at least 8 or more characters">

    <a href="#" class="button-link"
      onclick="document.getElementById('login-form').submit();">Login</a>

    <a href="/auth/google" class="button-link google-button">Login with
      Google</a>

    <p>Need an account? <a href="#" onclick="toggleForms()">Register
        here</a>
    </p>
  </form>
</section>